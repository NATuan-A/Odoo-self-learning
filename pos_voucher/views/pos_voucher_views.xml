<odoo>
    <record id="pos_voucher_view_tree" model="ir.ui.view">
        <field name="name">pos.voucher.tree</field>
        <field name="model">pos.voucher</field>
        <field name="arch" type="xml">
            <tree string="POS Voucher" editable="bottom">
                <field name="code"/>
                <field name="discount"/>
            </tree>
        </field>
    </record>

    <record id="pos_voucher_action" model="ir.actions.act_window">
        <field name="name">POS Voucher</field>
        <field name="res_model">pos.voucher</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_pos_voucher"
        name="Voucher"
        parent="point_of_sale.menu_point_of_sale"
        action="pos_voucher_action"
        sequence="100"/>
</odoo>