<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Định nghĩa nhóm quyền -->
    <record id="group_saler" model="res.groups">
        <field name="name">Saler</field>
        <field name="category_id" ref="base.module_category_sales"/>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_sales"/>
    </record>

    <!-- Quy tắc truy cập cho Saler: chỉ xem được thông tin của chính họ -->
    <record id="rule_saler_own" model="ir.rule">
        <field name="name">Saler: See Own Information</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="groups" eval="[(4, ref('estate.group_saler'))]"/>
        <field name="domain_force">[('id', '=', user.id)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>
