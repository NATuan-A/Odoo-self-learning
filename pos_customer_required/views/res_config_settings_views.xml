<!-- /path/to/odoo/addons/custom_pos/views/pos_config_views.xml -->

<odoo>
    <record id="res_config_settings_view_form_inherit_pos" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.point_of_sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='pos_payment_section']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="pos_customer_required"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_customer_required"/>
                        <div class="text-muted">Require a customer before starting an order</div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
